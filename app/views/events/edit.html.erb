<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>
      <!-- Event Form  -->
      <div id="form" class="col-5">
         <h2>Edit Event</h2>
         <form action="/events/<%= @event.id %>" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <input type="hidden" name="_method" value="patch">

            <div class="form-group">
               <label for="name">Name:</label>
               <input type="text" name="event[name]" id="name" value="<%= @event.name.titleize %>" class="form-control" />
            </div>

            <div class="form-group">
               <label for="date">Date:</label>
               <input type="date" name="event[date]" id="date" value="<%= @event.date %>" class="form-control" />
            </div>
            <div class="form-group">
               <label for="time">Time:</label>
               <input type="time" name="event[time]" id="time" value="<%= @event.time %>" class="form-control" />
            </div>
            <div class="form-group">
               <label for="description">Description:</label>
               <textarea name="event[description]" rows="8" cols="80" id="description" value="<%= @event.description %>" class="form-control"></textarea>
            </div>

            <div class="form-group">
               <label for="city">City:</label>
               <input type="text" name="location[city]" id="city" value="<%= @event.location.city.titleize %>" class="form-control" />
               <label for="state">State:</label>
               <input type="text" name="location[state]" id="state" value="<%= @event.location.state %>" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Update Event</button>
         </form>
      </div>
      <!-- End Event Form -->
   </body>
</html>
